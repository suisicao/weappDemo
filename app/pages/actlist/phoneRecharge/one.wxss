.NumKeyboard{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 102%;
    background: #feedd3;
}
.NumKeyboard .num{
    float: left;
    width: 33%;
    border: 1px solid #fcd697;
    border-right: 0 none;
    box-sizing: border-box;
    -moz-box-sizing: border-box;
    -webkit-box-sizing: border-box;
    margin-top: -1px;
    font-size: 1.3rem;
    line-height: 2.6rem;
    height:2.6rem;
    text-align: center;
    z-index: 998;
}
.NumKeyboard .first{
   border-left: 0 none;
}
.NumKeyboard .lastline-white{
  background: #fff;
}
.NumKeyboard .lastline-del{
     background: url('../../../images/deletepass.png') no-repeat center center white;
    background-size: 24% auto;
}