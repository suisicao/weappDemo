.phoneRechargeOne .topImg{
    width: 100%;  
}
.phoneRechargeOne .phoneInput{
    width:100%;
    padding-left:0.8rem;
    margin-top:1rem;
    padding-bottom:1rem;
    border-bottom:1px solid #e8e8e8;
}
.phoneRechargeOne .phoneInput .phoneNum{
    width:100%;
    font-size: 1.4rem;
}
.phoneRechargeOne .phoneInput .phoneAddr{
    width:100%;
    margin-top: 0.5rem;
    font-size: 0.8rem;
    color: #a1a1a1;
}
.rechargeAmount{
    width: 94%;
    margin: 0 auto;
    margin-top: 0.5rem;
}
.rechargeAmount .onepriceItem{
    width: 28%;
    margin-right: 2%;
    margin-left: 2%;
    margin-top: 1rem;
    height: 4.6rem;
    border: 1px solid #ccc;
    text-align: center;
    color: #ccc;
    background: #fff;
}
.rechargeAmount .choosenPrice{    
    border: 1px solid #f93b45; 
    color: #f93b45;  
    
}
.rechargeAmount .onepriceItem .price{
    display: block;
   font-size:0.9rem;  
   margin-top: 0.8rem;
}
.rechargeAmount .onepriceItem .sellpricce{
    display: block;
   font-size:0.7rem;  
    margin-top: 0.5rem;
}
.cover{
    width: 100%;
    height: 100%;
    position: fixed;
    background: black;
    opacity: 0.4;
    top: 0;
    left: 0;
}
.recharge-payway{
    position: absolute;
    bottom: 0;
    height:16rem;
    width: 100%;
    background: #fff;
}
.recharge-payway .closePay {
    width: 1.2rem;
    position: relative;
    left: 1rem;
    top:1rem;
}
.recharge-payway .title{
    height: 1.8rem;
    line-height: 0.6rem;
    font-size: 1rem;
    text-align: center;
    color: #3a3939;
    border-bottom: 1px solid #e8e8e8;
}
.recharge-payway .paywayItem{
    width: 100%;
    height: 2.4rem;
    line-height: 2rem;
    font-size:0.9rem;
    color: #3a3939;
    border-bottom: 1px solid #e8e8e8;
}
.recharge-payway .paywayItem .paywayImg{
     width: 1.3rem;   
    margin-left: 1rem;
    margin-top: 0.6rem;
}
.recharge-payway .paywayItem .wayName{  
    width: 40%;
    height:2.4rem;
    line-height:2.4rem;
    margin-left: 0.5rem;
}
.recharge-payway .paywayItem .wayBal{
    width: 30%;
    height:2.4rem;
    line-height:2.4rem;
    text-align: right;
    margin-right: 1rem;

}
