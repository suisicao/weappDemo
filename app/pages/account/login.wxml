<view class="registerOne">
<view class="loginhead"><image src="{{loginHead}}" mode="widthFix" ></image></view>
<view class="loginInput">
   <input type="number" class="loginput" maxlength="11"  value="{{phoneValue}}" bindinput="checkPhone" disabled="{{disabled}}" placeholder="请输入手机号码"/>
     <view class="Clearinput"><image src="{{src}}" class=" {{showClose}}" mode="widthFix" bindtap="clearPhone"></image></view>  
</view>
<view class="Loginpswd">
    <input type="password" class="Reg2input"  placeholder="请输入密码" bindinput="checkpass" value="{{password}}"/>
</view>
<view class="hints">{{checkHint}}</view>

    <button class="regOnebtn btngrey {{showGrey}}"> 下一步</button>
    <button class="regOnebtn btngrey_act  {{showActive}}"  bindtap="gotoAcc"> 下一步</button>
</view>