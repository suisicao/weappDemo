    text-align: center;
    font-size: 32rpx;
    background-image: url("../../images/myacc-aimg2.png");
    background-repeat: no-repeat;
    background-size: 1.3rem;
    background-position-x: 2.2rem;
    background-position-y: 1.1rem;
}
.myAccount .myacc-line1 .left .ammount{    
    color: #909090;
    font-size: 28rpx;
    margin-top: 0.2rem;
}
.myAccount .service{
    margin-top: 0.5rem;
}
.myAccount .myacc-line2{
    width: 100%;
    background: white;
