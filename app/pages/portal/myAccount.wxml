<view class="myAccount" bindtap="auth">
    <view class="topMess">
        <image class="userPhoto fl " src="{{photoImg}}" mode="widthFix"></image>
        <view class="UserMess">
            <text class="userName">
            <text class="uName">{{name}}</text>，你好
            </text>
            <text class="userNumber">{{phone}}</text>
            <text class="userlastlogTime">上次登录时间：<text class="time">{{lastTime}}</text>      
            </text>
        </view>
        <view class="billandcard">
            <text class="bills fl">账单</text>
            <view class="cutline fl"></view>
            <text class="cards fl">卡券包</text>
        </view>
    </view>
    <!--顶部用户资料完-->
    <text class="title">账户</text>
    <view class="account myacc-line1">
        <view class="balance left fl">余额
            <view class="ammount">{{remindAccount}}</view>
        </view>
        <text class="paycoed right fl">付款码</text>
    </view>

    <text class="title">服务</text>
    <view class="service">
    <view class="myacc-line2 bottomline ">
        <view class="phoneRecharge left fl" bindtap="phoneRecharge">手机充值</view>
        <view class="gasRecharge right fl">加油卡充值</view>
    </view>
    <view class="myacc-line2">
        <view class="sdmRecharge left fl">生活缴费</view>
        <view class="gameRecharge right fl">游戏充值</view>
    </view>
    </view>

    <text class="title">卡券商城</text>
    <image src="{{cardcenterImg}}" mode="widthFix" class="cardcenterImg"></image>


</view>